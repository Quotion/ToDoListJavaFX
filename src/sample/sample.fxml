   <children>
      <ImageView fitHeight="456.0" fitWidth="730.0" layoutX="-25.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../assets/background.jpg" />
         </image>
      </ImageView>
      <Button fx:id="but1" layoutX="469.0" layoutY="61.0" mnemonicParsing="false" onAction="#onButtonClick" prefHeight="27.0" prefWidth="149.0" style="-fx-background-color: #3574e8; -fx-text-fill: #3dcdcd; -fx-font-size: 12px; -fx-font-family: Sans Serif; -fx-font-weight: light;" text="Добавить" />
      <ScrollPane hbarPolicy="NEVER" layoutX="27.0" layoutY="17.0" prefHeight="428.0" prefWidth="425.0" style="-fx-background-color: #ffffff;">
         <content>
            <VBox fx:id="vboxTodo" prefHeight="426.0" prefWidth="421.0" style="-fx-background-color: #ffffff;" />
         </content>
      </ScrollPane>
      <TextField fx:id="fieldForTodo" layoutX="469.0" layoutY="17.0" onKeyPressed="#onPressEnter" promptText="Введите пункт" />
