<AnchorPane prefHeight="400.0" prefWidth="650.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.Controller">
   <children>
      <ScrollPane hbarPolicy="NEVER" layoutX="307.0" layoutY="18.0" prefHeight="365.0" prefWidth="320.0">
         <content>
            <VBox fx:id="vboxTodo" prefHeight="286.0" prefWidth="609.0" />
         </content>
      </ScrollPane>
      <Button fx:id="but1" layoutX="25.0" layoutY="17.0" mnemonicParsing="false" onAction="#onButtonClick" prefHeight="25.0" prefWidth="88.0" text="Добавить" />
      <TextField fx:id="fieldForTodo" layoutX="117.0" layoutY="17.0" onKeyPressed="#onPressEnter" promptText="Введите пункт" />
      <ChoiceBox fx:id="choiceBox" accessibleText="Куку" layoutX="25.0" layoutY="59.0" prefHeight="25.0" prefWidth="88.0" AnchorPane.rightAnchor="537.0" />
      <TextField fx:id="categoryEntry" layoutX="117.0" layoutY="58.0" onKeyPressed="#createCategory" prefHeight="27.0" prefWidth="150.0" promptText="Название категории" visible="false" />
      <Label fx:id="labelForInfo" layoutX="117.0" layoutY="42.0" prefHeight="17.0" prefWidth="149.0" textFill="#ffb5b5" />
   </children>
   <cursor>
      <Cursor fx:constant="DEFAULT" />
   </cursor>
</AnchorPane>
